A=$(grep $1 /home/nvergizov/git/ansible/server-testfact4/sandbox_vars/users.yml -m1 -n |awk  '{print $1}' |sed 's/://')
B=$(($A+6))
sed -i ''$A','$B'd' /home/nvergizov/git/ansible/server-testfact4/sandbox_vars/users.yml
